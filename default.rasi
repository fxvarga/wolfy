/* Wolfy Default Theme */

* {
    background-color: #fefefe;
    text-color: #d4d4d4;
    opacity: 0.95;
}

textbox {
    background-color: #2d2d2d;
    text-color: #ffffff;
    border-width: 1;
    border-color: #3c3c3c;
    border-radius: 4;
    padding-top: 8;
    padding-right: 12;
    padding-bottom: 8;
    padding-left: 12;
    font-size: 24;
    placeholder-color: #808080;
    cursor-color: #ffffff;
    selection-color: #264f78;
}

textbox.focused {
    border-color: #007acc;
}
